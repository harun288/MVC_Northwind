@model MVC_Northwind2.Models.Customer
@{
    ViewBag.Title = "UpdateCustomer";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-md-6">
    <form method="post">
        <div class="form-group">
            <label>Company Name</label>
            <input type="text" value="@Model.CompanyName" name="CompanyName" class="form-control" />
        </div>
        <div class="form-group">
            <label>City</label>
            <input type="text" value="@Model.City" name="City" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>



