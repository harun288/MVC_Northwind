@model MVC_Northwind2.Models.Product
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-md-6">
    <form method="post">
        <div class="form-group">
            <label>Product Name</label>
            <input type="text" value="@Model.ProductName" name="ProductName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Unitprice</label>
            <input type="text" value="@Model.UnitPrice" name="Unitprice" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>


