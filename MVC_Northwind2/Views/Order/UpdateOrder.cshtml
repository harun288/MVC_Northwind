@model MVC_Northwind2.Models.Order
@{
    ViewBag.Title = "UpdateOrder";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-md-6">
    <form method="post">
        <div class="form-group">
            <label>Ship Name</label>
            <input type="text" value="@Model.ShipName" name="ShipName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Ship Address</label>
            <input type="text" value="@Model.ShipAddress" name="ShipAddress" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>


