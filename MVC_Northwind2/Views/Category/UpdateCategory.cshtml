@model MVC_Northwind2.Models.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="col-md-6">
    <form method="post">
        <div class="form-group">
            <label>Category Name</label>
            <input type="text" value="@Model.CategoryName" name="CategoryName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" value="@Model.Description" name="Description" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

