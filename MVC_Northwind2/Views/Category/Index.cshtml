@model List<MVC_Northwind2.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-md-12">
    @Html.ActionLink("New Category", "AddCategory", null, new { @class = "btn btn-success" })
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryID</td>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>
                    @Html.ActionLink("Remove", "RemoveCategory", new { categoryId = category.CategoryID }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Update", "UpdateCategory", new { categoryId = category.CategoryID }, new { @class = "btn btn-warning" })
                </td>
            </tr>
        }
    </tbody>
</table>


